{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "es2022",
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["common/*"],
      "@scripts/*": ["scripts/*"]
    }
  },
  "include": ["src", "common"],
  "exclude": ["dist", "node_modules", "scripts", "tests"]
}